{
    "name": "valgorithms/in-absentia-mmo",
    "description": "Persistent, cooperative, time-gated civilization builder where character death fuels long-term evolution.",
    "authors": [
        {
            "name": "Valithor Obsidion",
            "email": "valithor@discordphp.org"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "team-reflex/discord-php": "^10.45.22",
        "monolog/monolog": "^3.0",
        "sharkk/router": "*",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "symfony/var-dumper": "*",
        "friendsofphp/php-cs-fixer": "^3",
        "davidcole1340/reactsh": "dev-master",
        "wyrihaximus/react-cache-redis": "^4.5",
        "symfony/cache": "^5.4",
        "laravel/pint": "^1.21",
        "pestphp/pest": "^4.1.2"
    },
    "scripts": {
        "cs": ["./vendor/bin/php-cs-fixer fix"],
        "unit": ["./vendor/bin/phpunit"]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "wyrihaximus/composer-update-bin-autoload-path": true,
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "IA\\": "src/IA/",
            "BackendPhp\\": "src/IA/backend/"
        }
    }
}
